<UserControl x:Class="Library.View.GenreDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Loaded="UserControl_Loaded">
    <Grid>
        <StackPanel x:Name="detailData" Orientation="Vertical">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="0" Grid.Row="0" Text="Name:" />
                <TextBox x:Name="txtName" Grid.Column="1" Grid.Row="0" Text="{Binding MyGenre.Name, Mode=TwoWay}" GotFocus="TxtName_GotFocus" />
                <TextBlock Grid.Column="0" Grid.Row="1" Text="Books:" />
                <ListBox x:Name="lstBooks" Grid.Column="1" Grid.Row="1" ItemsSource="{Binding MyGenre.BooksList, Mode=TwoWay}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Title, Mode=TwoWay}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Button Grid.Column="2" Grid.Row="3" Width="100" Margin="0,20,0,0" Content="Remove Item" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="RemoveButton_Click"></Button>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
