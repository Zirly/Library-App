<UserControl x:Class="Library.View.BookDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.View"
        mc:Ignorable="d"
        d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel x:Name="detailData" Orientation="Vertical">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="0" Grid.Row="0" Text="Title:" />
                <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding MyBook.Title}"/>
                <TextBlock Grid.Column="0" Grid.Row="1" Text="Author:" />
                <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding MyBook.Author_AtBook.FullName, Mode=OneWay}"/>
                <TextBlock Grid.Column="0" Grid.Row="2" Text="Year of publishing:" />
                <TextBox Grid.Column="1" Grid.Row="2" Text="{Binding MyBook.YearPublish}"/>
                <TextBlock Grid.Column="0" Grid.Row="3" Text="Genre:" />
                <TextBox Grid.Column="1" Grid.Row="3" Text="{Binding MyBook.Genre_AtBook.Name}"/>
                <TextBlock Grid.Column="0" Grid.Row="4" Text="Isbn:" />
                <TextBox Grid.Column="1" Grid.Row="4" Text="{Binding MyBook.Isbn}"/>
            </Grid>

            <TextBlock Text="Description:" />
            <TextBox Text="{Binding MyBook.Description}" Margin="5,10,10,0" 
                     Width="350" Height="Auto"
                     HorizontalScrollBarVisibility="Visible"
                     TextWrapping="Wrap"
                     TextAlignment="Left"
                     MaxLength="500"
                     IsReadOnly="False"
                     AcceptsReturn="True" />
            <Button Width="100" Margin="0,20,0,0" Content="Remove" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="Item_Remove_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
