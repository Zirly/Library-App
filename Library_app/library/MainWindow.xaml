<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        xmlns:view="clr-namespace:Library.View"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="Library.MainWindow"
        mc:Ignorable="d"
        Title="Library Application" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate x:Key="myTemplate" >
            <Grid x:Name="GridItem">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0" Text="{Binding Title}" HorizontalAlignment="Left" TextAlignment="Left"/>
                <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding YearPublish}" HorizontalAlignment="Right" TextAlignment="Right"/>
                <TextBlock Grid.Column="0" Grid.Row="1" Text="Author" HorizontalAlignment="Left" TextAlignment="Left"/>
                <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding Genre_AtBook.Name}" HorizontalAlignment="Right" TextAlignment="Right"/>
               
            </Grid>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- MENU -->
            <RowDefinition Height="*"/>
            <!-- SEARCH -->
            <RowDefinition Height="4*"/>
            <!-- VIEW -->
            <RowDefinition Height="Auto"/>
            <!-- BUTTONS -->
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="_Open"/>              
                <MenuItem Header="_Save"/>
                <Separator/>
                <MenuItem Header="_Exit"/>
            </MenuItem>
            <MenuItem Header="_Options"/>
        </Menu>
        <Grid Grid.Row="1" Margin="10,0">
            <TextBlock Width="Auto" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0">Show</TextBlock>
            <ComboBox x:Name="comboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="44,10,0,0" Width="70">
                <ComboBoxItem>Books</ComboBoxItem>
                <ComboBoxItem>Authors</ComboBoxItem>
                <ComboBoxItem>Genre</ComboBoxItem>
            </ComboBox>
            <TextBlock Width="Auto" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="140,10,0,0">Search</TextBlock>
        </Grid>
        <Grid Grid.Row="2" Margin="10,0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ListBox Grid.Column="0" Margin="0" HorizontalContentAlignment="Stretch" >
                <System:String>COLLECTION</System:String>
                <ListBox  Name="lstBooks" HorizontalContentAlignment="Stretch" ItemTemplate="{StaticResource myTemplate}" SelectionChanged="LstBooks_SelectionChanged" />

            </ListBox>
            <ListBox Grid.Column="1" Margin="0">
                <System:String>DETAILS</System:String>
                <view:BookDetail x:Name="BookDetailControl"/>
            </ListBox>
        </Grid>
        <StatusBar Grid.Row="3" Height="40" >
            <Button Width="55" Margin="20,0,0,0" Content="Add Item" />
            <Button Width="55" Margin="20,0,0,0" Click="TestDB_Click" Content="Show all"/>
            <Button HorizontalAlignment="Right" Margin="460,0,0,0" Width="55" Content="Save"/>
            <Button Height="20" Width="55" Margin="20,0" Content="Cancel"/>
        </StatusBar>
    </Grid>
</Window>
