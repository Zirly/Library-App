<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="Library.MainWindow"
        mc:Ignorable="d"
        Title="Library Application" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- MENU -->
            <RowDefinition Height="*"/>
            <!-- SEARCH -->
            <RowDefinition Height="4*"/>
            <!-- VIEW -->
            <RowDefinition Height="Auto"/>
            <!-- BUTTONS -->
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="_Open"/>              
                <MenuItem Header="_Save"/>
                <Separator/>
                <MenuItem Header="_Exit"/>
            </MenuItem>
            <MenuItem Header="_Options"/>
        </Menu>
        <Grid Grid.Row="1" Margin="10,0">
            <TextBlock Width="Auto" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0">Show</TextBlock>
            <ComboBox x:Name="comboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="44,10,0,0" Width="70">
                <ComboBoxItem>Books</ComboBoxItem>
                <ComboBoxItem>Authors</ComboBoxItem>
                <ComboBoxItem>Genre</ComboBoxItem>
            </ComboBox>
            <TextBlock Width="Auto" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="140,10,0,0">Search</TextBlock>
            

        </Grid>
        <Grid Grid.Row="2" Margin="10,0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ListBox Grid.Column="0" Margin="0">
                <System:String>COLLECTION</System:String>
                <ListBox ItemsSource="{Binding}" x:Name="lstBooks" Height="100" Width="100">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Title}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <ListBox ItemsSource="{Binding}" x:Name="lstAuthors" Height="100" Width="100">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding FullName}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <ListBox ItemsSource="{Binding}" x:Name="lstGenres" Height="100" Width="100">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <ListBox ItemsSource="{Binding}" x:Name="lstRelations" Height="100" Width="100">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <WrapPanel>
                                <TextBlock Text="{Binding RelationId}"/>
                                <TextBlock Text="{Binding BookId}"/>
                                <TextBlock Text="{Binding AuthorId}"/>
                            </WrapPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ListBox>
            <ListBox Grid.Column="1" Margin="0">
                <System:String>DETAILS</System:String>
            </ListBox>
        </Grid>
        <StatusBar Grid.Row="3" Height="40" >
            <Button Width="55" Margin="20,0,0,0" Content="Add Item" />
            <Button Width="55" Margin="20,0,0,0" Click="TestDB_Click" Content="Test"/>
            <Button HorizontalAlignment="Right" Margin="460,0,0,0" Width="55" Content="Save"/>
            <Button Height="20" Width="55" Margin="20,0" Content="Cancel"/>
        </StatusBar>
    </Grid>
</Window>
